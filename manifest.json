{
    "name": "Selection",
    "description": "Search or copy the selected text.",
    "version": "0.1.0",
    "manifest_version": 3,
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "permissions": ["search"],
    "background": {
        "service_worker": "scripts/worker.js"
    },
    "content_scripts": [
        {
            "js": [
                "scripts/selection.js"
            ],
            "matches": [
                "http://*/*",
                "https://*/*"
            ]
        }
    ]
}
